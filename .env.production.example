# Production Environment Variables for AMHSJ Backend
# Copy this file to .env.production and update with your actual values

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/amhsj-prod?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration - CRITICAL FOR PRODUCTION SECURITY
FRONTEND_URL=https://amhsj.org
FRONTEND_URL_WWW=https://www.amhsj.org
FRONTEND_URL_ADMIN=https://admin.amhsj.org
ALLOWED_ORIGINS=https://amhsj.org,https://www.amhsj.org

# SMTP Email Configuration
SMTP_HOST=smtppro.zoho.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-secure-app-password
SMTP_FROM=editorial@yourdomain.com

# Resend Email Configuration
RESEND_API_KEY=re_your_production_resend_api_key
FROM_EMAIL=AMHSJ <noreply@yourdomain.com>
REPLY_TO_EMAIL=editor-in-chief@yourdomain.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Security Headers (Optional)
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
LOG_FILE_ENABLED=true

# SSL/TLS (if handling SSL at application level)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem